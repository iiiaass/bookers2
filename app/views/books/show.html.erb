
<table class="table">
<tbody>
<h1>User info</h1>
<%=image_tag @book.user.get_profile_image(100,100) %>
<tr>
  <th>name:<%=@user.name %></th>
</tr>
<tr>
  <th>introduction:<%=@user.introduction %></th>
</tr>
<%=link_to "Edit",user_path(current_user) %>
</tbody>
</table>


<h1>New book</h1>
<%=form_with model:@book_new do |f| %>
<h4>Title</h4>
 <%=f.text_field:title %>
<h4>Body</h4>
 <%=f.text_area:body %>
<%=f.submit'Create Book' %>
<%end%>


<h1>Book detail</h1>
<div>

  <p><%=image_tag @book.user.get_profile_image(100,100) %></p>
  <p><%=@user.name %></p>
  <p>Title:<%=@book.title %></p>
  <p>Opinion:<%=@book.body %></p>
  <% if @book.user==current_user %>
  <%=link_to "Edit",edit_book_path(@book.id) %>
  <%end%>
  <% if @book.user==current_user %>
  <%=link_to "Destroy",book_path(@book.id),method: :delete, "data-confirm"=>"本当に消しますか？" %>
  <%end%>
</div>


