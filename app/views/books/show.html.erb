

<div>
<h2>User info</h2>
<p><%=image_tag @book.user.get_profile_image(100,100) %></p>
<p>name:<%=@user.name %></p>
<p>introduction:<%=@user.introduction %></p>
<%=link_to "Edit",user_path(current_user) %>
</div>


<div>
<h1>New book</h1>
<%=form_with model:@book_new do |f| %>
<h4>Title</h4>
 <%=f.text_field:title %>
<h4>Body</h4>
 <%=f.text_area:body %>
<%=f.submit'Create Book' %>
<%end%>
</div>

<h1>Book detail</h1>
<div>

  <p><%=image_tag 'sample-author1.jpg' %></p>
  <p><%=@user.name %></p>
  <p>Title:<%=@book.title %></p>
  <p>Opinion:<%=@book.body %></p>
  <% if @book.user==current_user %>
  <%=link_to "Edit",edit_book_path(@book.id) %>
  <%end%>
  <% if @book.user==current_user %>
  <%=link_to "Destroy",book_path(@book.id),method: :delete, "data-confirm"=>"本当に消しますか？" %>
  <%end%>
</div>


