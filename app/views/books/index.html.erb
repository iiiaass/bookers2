<h2>Books</h2>
<% @books.each do |book| %>
<div>
  <p><%=image_tag 'sample-author1.jpg' %></p>
  <p>Title:<%=book.title %></p>
  <p>Opinion:<%=book.body %></p>
</div>
<%end%>

<div>
<h1>New book</h1>
<%=form_with model:@book do |f| %>
<h4>Title</h4>
 <%=f.text_field:title %>
<h4>Body</h4>
 <%=f.text_area:body %>
<%=f.submit'Create Book' %>
<%end%>
</div>