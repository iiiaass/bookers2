<h2>Books</h2>
<% @books.each do |book| %>
<div>
  <p><%=link_to image_tag book.user.get_profile_image(100,100) user_path(@user.id)%></p>
  <p>Title:<%=link_to book.title,book_path(book.id) %></p>
  <p>Opinion:<%=book.body %></p>
</div>
<%end%>

<div>
<h1>New book</h1>
<%=form_with model:@book do |f| %>
<h4>Title</h4>
 <%=f.text_field:title %>
<h4>Body</h4>
 <%=f.text_area:body %>
<%=f.submit'Create Book' %>
<%end%>
</div>

