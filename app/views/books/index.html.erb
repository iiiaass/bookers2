<h1>User info</h1>
<p><%=image_tag current_user.get_profile_image(100,100) %></p>
<p>name:<%=current_user.name %></p>
<p>introduction:<%=current_user.introduction %></p>
<%=link_to "Edit",edit_user_path(current_user) %>


<div>
<h1>New book</h1>
<%=form_with model:@book do |f| %>
<h4>Title</h4>
 <%=f.text_field:title %>
<h4>Body</h4>
 <%=f.text_area:body %>
<%=f.submit'Create Book' %>
<%end%>
</div>



<h2>Books</h2>
<% @books.each do |book| %>
<div>
  <%=link_to  user_path(current_user) do %>
  <%=image_tag book.user.get_profile_image(100,100) %>
  <%end%>
  <p>Title:<%=link_to book.title,book_path(book.id) %></p>
  <p>Opinion:<%=book.body %></p>
</div>
<%end%>


