<h2>User info</h2>
<p><%=image_tag current_user.get_profile_image(100,100)%></p>
<p>name:<%=@user.name %></p>
<p>introduction:<%=@user.introduction %></p>
<% if @user==current_user %>
<%=link_to "Edit",edit_user_path(@user.id) %>
<%end%>


<h1>New book</h1>
<%=form_with model:@book do |f| %>
<h4>Title</h4>
 <%=f.text_field:title %>
<h4>Body</h4>
 <%=f.text_area:body %>

<%=f.submit'Create Book' %>
<%end%>

<h2>Books</h2>
<% @books.each do |book| %>
<div>
  <p><%=image_tag  book.user.get_profile_image(100,100)%></p>
  <p>Title:<%=book.title %></p>
  <p>Opinion:<%=book.body %></p>
</div>
<%end%>