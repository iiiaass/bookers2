<h2>User info</h2>
<p><%=image_tag 'sample-author1.jpg' %></p>
<p>name:<%=@user.name %></p>
<p>introduction:<%=@user.introduction %></p>


<h1>New book</h1>
<%=form_with model:@book do |f| %>
<h4>Title</h4>
 <%=f.text_field:title %>
<h4>Body</h4>
 <%=f.text_area:body %>

<%=f.submit'Create Book' %>
<%end%>

<h2>Books</h2>
<% @books.each do |books| %>
<div>
  <p><%=image_tag 'sample-author1.jpg' %></p>
  <p>Title:<%=books.title %></p>
  <p>Opinion:<%=books.body %></p>
</div>
<%end%>