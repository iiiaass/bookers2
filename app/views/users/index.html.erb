<h2>User info</h2>
<p><%=image_tag 'sample-author1.jpg' %></p>
<p>name:<%=current_user.name %></p>
<p>introduction:<%=current_user.introduction %></p>


<h1>New book</h1>
<%=form_with model:@book do |f| %>
<h4>Title</h4>
 <%=f.text_field:title %>
<h4>Body</h4>
 <%=f.text_area:body %>

<%=f.submit'Create Book' %>
<%end%>

<h2>Users</h2>
<% @user.each do |f| %>
<p>image:<%=image_tag 'sample-author1.jpg' %></p>
<p>name:<%=f.name %></p>
<%end%>